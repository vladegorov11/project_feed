<div class="search_form">
    <%= form_with url: search_feeds_path, method: "Get", local: true  do |f| %>
        <% @sourse.each do |sourse| %>
              <div class="wrapper">
                  <div class="sourse_name">
                     <%= sourse.name%>
                  </div>
                  <div class="">
                    <label>
                         <input type="checkbox" name="source_id" class="checkbox" value="<%= sourse.id %>" />
                         <div class="switch"></div>
                    </label>
                  </div>
              </div>
          <% end %>
          <div class="actions">
              <input type="text" name="title_search" class="search-input" placeholder="Поиск по сайту"/>
              <%= f.submit 'Поиск', class: 'btn'%>
          </div>
    <% end %>
</div>
